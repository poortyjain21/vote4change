        <servlet-class>evoting.controller.ElectionResultControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteControllerServlet</servlet-name>
        <servlet-class>evoting.controller.DeleteControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowUserDetailsControllerServlet</servlet-name>
        <servlet-class>evoting.controller.ShowUserDetailsControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveUserControllerServlet</servlet-name>
        <servlet-class>evoting.controller.RemoveUserControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCandidateControllerServlet</servlet-name>
        <servlet-class>evoting.controller.UpdateCandidateControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDetailsCandidateControllerServlet</servlet-name>
        <servlet-class>evoting.controller.UpdateDetailsCandidateControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControllerServlet</servlet-name>
        <url-pattern>/LoginControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControllerServlet</servlet-name>
        <url-pattern>/AdminControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCandidateControllerServlet</servlet-name>
        <url-pattern>/AddCandidateControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewCandidateControllerServlet</servlet-name>
        <url-pattern>/AddNewCandidateControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCandidateControllerServlet</servlet-name>
        <url-pattern>/ShowCandidateControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VotingControllerServlet</servlet-name>
        <url-pattern>/VotingControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddVoteControllerServlet</servlet-name>
        <url-pattern>/AddVoteControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ElectionResultControllerServlet</servlet-name>
        <url-pattern>/ElectionResultControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteControllerServlet</servlet-name>
        <url-pattern>/DeleteControllerServlet</url-pattern>
    </servlet-mapping>
