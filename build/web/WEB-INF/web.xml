        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>ShowUserDetailsControllerServlet</servlet-name>
        <url-pattern>/ShowUserDetailsControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveUserControllerServlet</servlet-name>
        <url-pattern>/RemoveUserControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCandidateControllerServlet</servlet-name>
        <url-pattern>/UpdateCandidateControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDetailsCandidateControllerServlet</servlet-name>
        <url-pattern>/UpdateDetailsCandidateControllerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
